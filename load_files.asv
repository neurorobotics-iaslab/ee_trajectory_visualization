function [c_event, ee] = load_files(couple_files)
    c_event.POS = [];
    c_event.DUR = [];
    c_event.TYP = [];

    ee.tr.x = [];
    ee.tr.y = [];
    ee.tr.z = [];

    for i=1:length(couple_files)
        c_file = strjoin(couple_files(i));
        load(c_file);
    
        if i == 1
            c_event.POS = [c_event.POS; event.POS];
            c_event.DUR = [c_event.DUR; event.DUR];
            c_event.TYP = [c_event.TYP; event.TYP];

            ee.tr.x = [ee.tr.x; translation_x];
            ee.tr.y = [ee.tr.y; translation_y];
            ee.tr.z = [ee.tr.z; translation_z];
        else
            % the only one modificed isthe position
            c_event.POS = [c_event.POS; event.POS + repmat(length(ee.tr.x), length(event.POS), 1)];
            c_event.DUR =
        end
        %{
        c_event{i} = event;
        ee.tr.x{i} = translation_x;
        ee.tr.y{i} = translation_y;
        ee.tr.z{i} = translation_z;
        ee.rt.x{i} = rotation_x;
        ee.rt.y{i} = rotation_y;
        ee.rt.z{i} = rotation_z;
        ee.rt.w{i} = rotation_w;
        %}
    end
end